<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="horizontal"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
            >
        <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/make_list"
                android:id="@+id/make_list" android:onClick="startGroceryListActivity" android:layout_weight="0.5"
                android:layout_margin="0dp"/>
        <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/edit_shelf"
                android:id="@+id/edit_shelf" android:onClick="startEditShelfActivity" android:layout_weight="0.5"
                android:layout_margin="0dp"/>
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="horizontal"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
            >
        <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/export_shelf"
                android:id="@+id/export_shelf" android:onClick="startShelfExport" android:layout_weight="0.5"
                android:layout_margin="0dp"/>

    </LinearLayout>

</LinearLayout>
