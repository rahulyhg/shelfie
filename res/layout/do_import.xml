<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/importing"
            android:id="@+id/importing" android:textSize="24sp" android:layout_marginTop="40dip"/>
    <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar" android:layout_gravity="center_horizontal" android:layout_marginTop="40dip"/>

    <Space android:layout_width="fill_parent" android:layout_height="0dp" android:layout_weight="1" />
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_horizontal">
        <com.google.android.gms.ads.AdView
                android:id="@+id/adView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                ads:adUnitId="ca-app-pub-2493301058078803/5873099376"
                ads:adSize="BANNER"/>
    </LinearLayout>

</LinearLayout>